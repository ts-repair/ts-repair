{
  "compilerOptions": {
    "target": "es2022",
    "moduleDetection": "force",
    "module": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.mts"],
  "exclude": ["src/**/*.cts", "node_modules"]
}
